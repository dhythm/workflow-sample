// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String   @id @default(uuid())
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  name                   String?
  email                  String   @unique
  issueCreated           Issue[]  @relation("author")
  issueAssigned          Issue[]  @relation("assignee")
  issueWeaklyReviewing   Issue[]  @relation("weakReviewer")
  issueStronglyReviewing Issue[]  @relation("strongReviewer")
  issueApproved          Issue[]  @relation("approvedBy")
}

model Issue {
  id              String    @id @default(uuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  title           String
  content         String
  comments        Comment[]
  authorId        String
  author          User      @relation("author", fields: [authorId], references: [id])
  assigneeId      String?
  assignee        User?     @relation("assignee", fields: [assigneeId], references: [id])
  weakReviewers   User[]    @relation("weakReviewer")
  strongReviewers User[]    @relation("strongReviewer")
  approvedBy      User[]    @relation("approvedBy")
}

model Comment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String
  Issue     Issue?   @relation(fields: [issueId], references: [id])
  issueId   String?
}
